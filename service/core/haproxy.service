[Unit]
Description=HAProxy consumer

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull ksean/haproxy
ExecStart=/usr/bin/docker run --rm --name %n -p ${COREOS_PUBLIC_IPV4}:80:80 -p ${COREOS_PUBLIC_IPV4}:3306:3306 ksean/haproxy
ExecStop=/usr/bin/docker stop -t 3 %n

[X-Fleet]
Conflicts=apache.service
Conflicts=mysql.service